<main class="bg-white-500 flex justify-center items-center mt-20">
    <main class="container">
        <h3 class="mb-14">Input your user info here!</h3>
        <form class="form login-form">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text text-xs">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="password-login">
            </div>
            <button type="submit" class="btn btn-primary text-black border-black">Login</button>
        </form>
    </main>
</main>